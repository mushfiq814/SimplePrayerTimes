<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:theme="@style/Base.Theme.AppCompat"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mushfiqmahmud.simpleprayertimes.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"

            android:background="@color/colorPrimary600"
            android:fontFamily="@font/libre_baskerville"
            android:padding="50sp"
            android:text="@string/date"
            android:textColor="#FFF"
            android:textSize="70sp"
            android:textStyle="bold" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:layout_gravity="bottom">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:textAlignment="center"
                    android:background="@color/colorPrimary600">

                    <TextView
                        android:text="@string/fajr"
                        style="@style/prayerTimesandText"/>

                    <TextView
                        android:id="@+id/fajr_time"
                        android:text="@string/dummy_time"
                        style="@style/prayerTimesandText"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:textAlignment="center"
                    android:background="@color/colorPrimary500">

                    <TextView
                        android:text="@string/zuhr"
                        style="@style/prayerTimesandText"/>

                    <TextView
                        android:id="@+id/zuhr_time"
                        android:text="@string/dummy_time"
                        style="@style/prayerTimesandText"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:textAlignment="center"
                    android:background="@color/colorPrimary400">

                    <TextView
                        android:text="@string/asr"
                        style="@style/prayerTimesandText"/>

                    <TextView
                        android:id="@+id/asr_time"
                        android:text="@string/dummy_time"
                        style="@style/prayerTimesandText"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:textAlignment="center"
                    android:background="@color/colorPrimary300">

                    <TextView
                        android:text="@string/maghrib"
                        style="@style/prayerTimesandText"/>

                    <TextView
                        android:id="@+id/maghrib_time"
                        android:text="@string/dummy_time"
                        style="@style/prayerTimesandText"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:orientation="horizontal"
                    android:textAlignment="center"
                    android:background="@color/colorPrimary200">

                    <TextView
                        android:text="@string/isha"
                        style="@style/prayerTimesandText"/>

                    <TextView
                        android:id="@+id/isha_time"
                        android:text="@string/dummy_time"
                        style="@style/prayerTimesandText"/>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>


</android.support.constraint.ConstraintLayout>
